<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/lyricsss"
    tools:context=".ViewLyrics">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:text="You are not alone by micheal jackson"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView

                android:id="@+id/lyrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="70"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="gsfkdhafjkhdajksfhasdjklfhajklfhjklafhjkldfhafadjklfasdfaddafaksdfakfjiweokdfasdkjfhajksdhfjkafhjkdshfajkdfhadjklfdfdsffhjkl"
                android:textAlignment="center"
                android:textSize="@dimen/primaryTextSize" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>